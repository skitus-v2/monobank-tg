{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "config/*": ["config/*"]
    },
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
